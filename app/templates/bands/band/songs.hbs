<ul class="rr-list">
  {{#each this.model.songs as |song|}}
    <li class="rr-list-item">
      {{song.title}}

      <StarRating
        class="fr"
        @rating={{song.rating}}
        @item={{song}}
        @onClick={{fn this.updateRating song}}
      />
    </li>
  {{else}}
    <li class="tc">
      No {{this.model.name}} songs yet.
    </li>
  {{/each}}
</ul>
<div class="rr-new-label">
  {{#if this.isAddingSong}}
    <form class="rr-inline-form" {{on "submit" this.saveSong}}>
      <Input
        @type="text"
        @value={{this.newSongTitle}}
        class="rr-input"
        placeholder="New Song"
        data-test-rr="new-band-input"
      />
      <button
        type="submit"
        class="rr-action-button"
        disabled={{this.isAddButtonDisabled}}
        {{on "click" this.saveSong}}
      >
        Add
      </button>
      <button class="rr-cancel-icon" {{on "click" this.cancelAddSong}}>
        {{fa-icon "times"}}
      </button>
    </form>
  {{else}}
    <label {{on "click" this.addSong}}>
      {{fa-icon "plus"}}
      <span class="ml1">
        Add new Song
      </span>
    </label>
  {{/if}}
</div>